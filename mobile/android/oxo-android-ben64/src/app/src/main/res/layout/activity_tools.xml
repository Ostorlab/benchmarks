<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Tools"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="24dp"/>

        <!-- Diagnostic Tools -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diagnostic Tools"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_diagnostic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Run System Diagnostic"
                android:layout_marginBottom="12dp"
                android:background="#4CAF50"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_diagnostic_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnostic: Ready"
                android:textColor="#666"
                android:padding="8dp"
                android:background="#f0f0f0"/>

        </LinearLayout>

        <!-- System Maintenance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Maintenance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_cleanup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Perform System Cleanup"
                android:layout_marginBottom="8dp"
                android:background="#FF9800"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_cleanup_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cleanup: Ready"
                android:textColor="#666"
                android:padding="8dp"
                android:background="#f0f0f0"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_optimization"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Optimize System Performance"
                android:layout_marginBottom="8dp"
                android:background="#9C27B0"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_optimization_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optimization: Ready"
                android:textColor="#666"
                android:padding="8dp"
                android:background="#f0f0f0"/>

        </LinearLayout>

        <!-- Backup and Restore -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backup and Restore"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_backup"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Create Backup"
                    android:layout_marginEnd="8dp"
                    android:background="#1976d2"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btn_restore"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Restore System"
                    android:layout_marginStart="8dp"
                    android:background="#f44336"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_backup_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last backup: Ready"
                android:textColor="#666"
                android:padding="8dp"
                android:background="#f0f0f0"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
