<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="SystemManager Pro"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        
        <!-- Main Activities -->
        <activity
            android:name="com.systemmanager.MainActivity"
            android:exported="true"
            android:label="SystemManager Pro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.systemmanager.ConfigurationActivity"
            android:exported="false"
            android:label="Configuration" />
            
        <activity
            android:name="com.systemmanager.MonitoringActivity"
            android:exported="false"
            android:label="System Monitoring" />
            
        <activity
            android:name="com.systemmanager.ToolsActivity"
            android:exported="false"
            android:label="System Tools" />
            
        <activity
            android:name="com.systemmanager.ReportsActivity"
            android:exported="false"
            android:label="System Reports" />
            
        <activity
            android:name="com.systemmanager.PreferencesActivity"
            android:exported="false"
            android:label="Preferences" />

        <provider
            android:name="com.systemmanager.providers.SystemContentProvider"
            android:authorities="com.systemmanager.system"
            android:exported="true"
            android:enabled="true" />
            
    </application>

</manifest>