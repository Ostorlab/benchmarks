<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Configuration"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="24dp"/>

        <!-- Server Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Configuration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Server URL:"
                    android:textColor="#666"/>

                <EditText
                    android:id="@+id/et_server_url"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="https://api.systemmanager.com"
                    android:textSize="14sp"
                    android:background="#f0f0f0"
                    android:padding="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="API Key:"
                    android:textColor="#666"/>

                <EditText
                    android:id="@+id/et_api_key"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Enter API key"
                    android:textSize="14sp"
                    android:background="#f0f0f0"
                    android:padding="8dp"
                    android:inputType="textPassword"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Timeout:"
                    android:textColor="#666"/>

                <EditText
                    android:id="@+id/et_timeout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="30 seconds"
                    android:textSize="14sp"
                    android:background="#f0f0f0"
                    android:padding="8dp"
                    android:inputType="number"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Database Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Database Configuration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="DB Host:"
                    android:textColor="#666"/>

                <EditText
                    android:id="@+id/et_db_host"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="localhost"
                    android:textSize="14sp"
                    android:background="#f0f0f0"
                    android:padding="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="DB Port:"
                    android:textColor="#666"/>

                <EditText
                    android:id="@+id/et_db_port"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="5432"
                    android:textSize="14sp"
                    android:background="#f0f0f0"
                    android:padding="8dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="DB Name:"
                    android:textColor="#666"/>

                <EditText
                    android:id="@+id/et_db_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="systemmanager"
                    android:textSize="14sp"
                    android:background="#f0f0f0"
                    android:padding="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_test_connection"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Test Connection"
                android:layout_marginEnd="8dp"
                android:background="#4CAF50"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_save_config"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Save Configuration"
                android:layout_marginStart="8dp"
                android:background="#1976d2"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <!-- Status Display -->
        <TextView
            android:id="@+id/tv_config_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuration status: Ready"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="#f0f0f0"/>

    </LinearLayout>

</ScrollView>
