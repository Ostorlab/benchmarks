<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💳 Confirm Payment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="32dp" />

    <!-- Payment Summary Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Merchant -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Merchant:"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewMerchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon.com"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount:"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$299.99"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment Method:"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****1234"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Transaction ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction ID:"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TXN-2024-8901234"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textIsSelectable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Security Notice -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔒 This transaction is secured by AtlantaBank's encryption"
        android:textSize="14sp"
        android:textColor="#4CAF50"
        android:background="#E8F5E8"
        android:padding="12dp"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/buttonCancelPayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textColor="#666666"
            android:backgroundTint="#F5F5F5"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonConfirmPayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONFIRM PAYMENT"
            android:textColor="@color/white"
            android:backgroundTint="#4CAF50"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Processing Note -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⏱️ Payment processing may take up to 2 business days"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="24dp" />


</LinearLayout>