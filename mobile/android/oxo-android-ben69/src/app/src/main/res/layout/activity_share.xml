<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- File Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="File name"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Protection Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Password protect this share"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <Switch
                android:id="@+id/switch_password_protected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_share_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Share password"
                android:inputType="textPassword"
                android:enabled="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Create Share Button -->
        <Button
            android:id="@+id/btn_create_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Share Link"
            android:textSize="16sp" />

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share links expire after 7 days. Password-protected shares use secure bcrypt encryption."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
