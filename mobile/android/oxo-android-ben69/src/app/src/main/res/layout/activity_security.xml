<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Two-Factor Authentication -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Two-Factor Authentication"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add an extra layer of security"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_two_factor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Auto Lock -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-Lock App"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatically lock after 5 minutes"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_auto_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Share Analytics -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share Analytics"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track download statistics"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_share_analytics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sync Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Background Sync"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sync share data automatically"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_sync_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Security Info -->
        <TextView
            android:id="@+id/tv_encryption_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All your files are encrypted with AES-256 encryption. Share passwords are hashed using bcrypt."
            android:textSize="12sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:background="#f0f0f0"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_sync_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automatic synchronization keeps your shares updated across all devices."
            android:textSize="12sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:background="#f0f0f0" />

    </LinearLayout>

</ScrollView>
