<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Upload Options -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Files"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_select_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Files from Device"
                    android:drawableLeft="@android:drawable/ic_menu_upload"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take Photo"
                    android:drawableLeft="@android:drawable/ic_menu_camera" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Upload Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_upload_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to upload"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_upload"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Storage Info -->
        <TextView
            android:id="@+id/tv_available_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12.6 GB available space"
            android:textSize="12sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:background="#f0f0f0" />

    </LinearLayout>

</ScrollView>
