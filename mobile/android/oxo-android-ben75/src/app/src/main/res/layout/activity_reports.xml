<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Reports"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="24dp"/>

        <!-- Performance Report -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Performance Metrics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_cpu_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU Usage: Loading..."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_memory_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Usage: Loading..."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_disk_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disk Usage: Loading..."
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- Usage Report -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usage Statistics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_today_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today: Loading..."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_week_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week: Loading..."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_month_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month: Loading..."
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- Compliance Report -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compliance Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_compliance_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compliance Score: Loading..."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_policy_violations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Policy Violations: Loading..."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_last_audit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Audit: Loading..."
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- Activity Log -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity Log"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_activity_log"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Loading activity log..."
                android:textSize="12sp"
                android:textColor="#666"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:background="#f0f0f0"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
