<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/userRoleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/role_text"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vulnerable_dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/viewSecretsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_secrets_button"
            android:textSize="16sp"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/secretsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:textColor="#333333"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security_vulnerabilities"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vulnerability_list"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout_button"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>